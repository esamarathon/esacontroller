<div class="card" id="vp50">
	<header>
		<h3>DVDO VP50</h3>
	</header>
	<form method="POST" action="/rack/vp50">
		<input type="hidden" name="rack" value="1">
		<fieldset>
			<label>Preset</label>
			<select name="preset">
				<option>No change</option>
				<% for (var i = 1; i < 13; i++) { %>
					<option <%= i === current.vp50.preset ? "selected" : "" %>><%= i %></option>
				<% } %>
			</select>
		</fieldset>

		<fieldset>
			<label>Input</label>
			<select name="input">
				<option selected >No change</option>
				<% 
					const options = [1, 2, 3, 4];
					for (let opt of options) {
				%>
				<option <%= opt === current.vp50.input ? "selected" : "" %>><%= opt %></option>
				<% } %>
			</select>
		</fieldset>

		<!--
		public Integer preset;
		public String input;
		-->

		<input type="submit" value="Send"/>
	</form>
</div>
