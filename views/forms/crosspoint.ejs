<div class="card" id="crosspoint">
	<header>
		<h3>Crosspoint</h3>
	</header>
	<form method="POST" action="/rack/crosspoint">
		<input type="hidden" name="rack" value="1">
		<fieldset>
			<label>Preset</label>
			<select name="preset">
				<option value="">No change</option>
				<% for (var i = 1; i < 13; i++) { %>
					<option value="<%=i%>" <%= i == current.crosspoint.preset ? "selected" : "" %>> <%= i %></option>
				<% } %>
			</select>
		</fieldset>

		<button type="submit" class="button" value="Send">Send</button>
	</form>

	<hr>

	<!--
	<div class="callout">
		Insert form for tie changes here.
		This tricky to do. Might need to do some fancy javascripting here.
	</div>
	-->

	<button onclick="$('#crosspoint_dangerous').toggle()" class="warning">Show dangerous operations</button>
	<div id="crosspoint_dangerous" class="callout warning dangerous">
		<h5 class="capital">warning: dangerous operations. beware!</h5>
		<form method="POST" action="/rack/crosspoint/reset">
			<input type="hidden" name="rack" value="1">
			<button type="submit" class="button alert" value="Reset Ties">
				Reset Ties
			</button>
		</form>
	</div>
</div>
